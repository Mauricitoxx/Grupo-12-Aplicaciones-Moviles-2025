<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/Yellow1"
    android:padding="24dp">

    <Button
        android:id="@+id/buttonSalir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:drawableRight="@drawable/ic_logout_24dp"
        android:text="Salir  "
        android:background="@drawable/boton_redondo_2"
        android:textColor="@color/white"
        android:layout_marginRight="10dp"
        android:textSize="18dp"
        android:padding="10dp"/>

    <TextView
        android:id="@+id/textViewBienvenido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bienvenido "
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:textSize="30dp"
        android:padding="15dp"
        android:textColor="@color/blackish"
        android:layout_marginBottom="35px"
        android:layout_marginTop="35px"/>



    <TextView
        android:id="@+id/textViewSeleccion1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Plataforma utilizada: "
        android:textStyle="bold"
        android:textSize="23dp"
        android:padding="10dp"
        android:textColor="@color/brown"/>


    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Seleccione el sistema operativo del dispositivo"
        android:textAlignment="center"
        android:textSize="21dp"
        android:padding="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginHorizontal="20dp">

        <ImageButton
            android:id="@+id/buttonAndroid"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="15sp"
            android:src="@drawable/ic_android_black_24dp"
            android:background="@drawable/bordes"
            android:layout_marginRight="10dp"
            android:scaleType="centerInside"
            android:contentDescription="Android"
            android:cursorVisible="true" />

        <ImageButton
            android:id="@+id/buttonIOS"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="15sp"
            android:src="@drawable/baseline_1k_plus_24"
            android:background="@drawable/bordes"
            android:layout_marginLeft="10dp"
            android:scaleType="centerInside"
            android:contentDescription="IOS"
            android:cursorVisible="true"/>

    </LinearLayout>

    <TextView
        android:id="@+id/textViewSeleccion2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Preferencias: "
        android:textStyle="bold"
        android:padding="10dp"
        android:textSize="23dp"
        android:textColor="@color/brown"/>


    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ingrese el tipo de preferencias que busca en el dispositivo"
        android:textAlignment="center"
        android:textSize="21dp"
        android:padding="10dp"/>


    <Switch
        android:id="@+id/switch1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ProgramaciÃ³n"
        android:layout_marginBottom="20px"
        android:layout_marginHorizontal="15dp"
        android:thumbTint="@color/Green2"
        android:textSize="20sp"
        android:textColor="@color/brown"
        android:textStyle="bold"/>


    <Switch
        android:id="@+id/switch2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Redes"
        android:layout_marginBottom="20px"
        android:layout_marginHorizontal="15dp"
        android:thumbTint="@color/Green2"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/brown"/>

    <Switch
        android:id="@+id/switch3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Seguridad"
        android:layout_marginBottom="20px"
        android:layout_marginHorizontal="15dp"
        android:thumbTint="@color/Green2"
        android:textSize="20sp"
        android:textColor="@color/brown"
        android:textStyle="bold"/>

    <Switch
        android:id="@+id/switch4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hardware"
        android:layout_marginBottom="20px"
        android:layout_marginHorizontal="15dp"
        android:thumbTint="@color/Green2"
        android:textSize="20sp"
        android:textColor="@color/brown"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/buttonOtro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/boton_redondo_2"
        android:text="Otro"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/buttonGuardar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guardar"
        android:background="@drawable/boton_redondo_1"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:textStyle="bold"
        android:padding="15dp"
        android:textSize="20dp"/>


</LinearLayout>