<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/Yellow1">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="15dp"
        android:text="¿Tiene problemas para iniciar sesión?"
        android:layout_gravity="center_horizontal"
        android:textSize="23sp"
        android:textStyle="bold"
        android:padding="10dp"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text="Ingrese su correo electronico y le enviaremos un enlace para que pueda recuperar el acceso a su cuenta"
        android:textAlignment="center"
        android:textSize="18sp"
        android:layout_marginBottom="40dp"
/>

    <EditText
        android:id="@+id/editTextTextEmailAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:inputType="textEmailAddress"
        android:hint="Correo electrónico"
        android:background="@drawable/login"
        android:padding="10dp"
        android:textSize="20sp"

/>
    <View
        android:layout_width="200dp"
        android:layout_height="2dp"
        android:layout_marginTop="1dp"
        android:layout_marginStart="105dp"
        android:layout_marginEnd="8dp"
        android:background="#000000" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enviar enlace de inicio de sesion"
        android:textStyle="normal"
        android:background="@color/Green1"
        android:padding="20dp"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif-black"
        android:layout_gravity="center_horizontal"
    />

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Crear una nueva cuenta"
        android:background="@color/Green1"
        android:padding="20dp"
        android:fontFamily="sans-serif-black"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
 />
</LinearLayout>