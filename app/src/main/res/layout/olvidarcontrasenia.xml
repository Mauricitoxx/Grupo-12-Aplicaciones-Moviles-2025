<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView"
        android:layout_width="377dp"
        android:layout_height="27dp"
        android:layout_marginStart="85dp"
        android:layout_marginEnd="90dp"
        android:layout_marginBottom="24dp"
        android:text="¿Tiene problemas para iniciar sesión?"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="280dp"
        android:layout_height="66dp"
        android:layout_marginStart="64dp"
        android:layout_marginEnd="64dp"
        android:layout_marginBottom="54dp"
        android:text="Ingrese su correo electronico y le enviaremos un enlace para que pueda recuperar el acceso a su cuenta"
        android:textAlignment="center"
        android:textSize="16sp"
/>

    <EditText
        android:id="@+id/editTextTextEmailAddress"
        android:layout_width="269dp"
        android:layout_height="43dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:text="Correo electrónico"
/>

    <Button
        android:id="@+id/button3"
        android:layout_width="272dp"
        android:layout_height="49dp"
        android:text="Enviar enlace de inicio de sesion"
        android:textStyle="normal"
 />

    <Button
        android:id="@+id/button4"
        android:layout_width="268dp"
        android:layout_height="48dp"
        android:text="Crear una nueva cuenta"
 />
</LinearLayout>